{
  "manifest_version": 3,
  "name": "OceanCRM WhatsApp Extension",
  "version": "1.1.0",
  "description": "OceanCRM WhatsApp integration with stage filtering",
  "permissions": ["storage", "cookies"],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://*.oceancrm.in/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["src/content.js"],
      "css": ["src/styles.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["src/main-world.js"],
      "world": "MAIN",
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lib/wa-inject.js"],
      "matches": ["https://web.whatsapp.com/*"]
    }
  ]
}
