{
	"manifest_version": 3,
	"name": "OceanCRM WhatsApp Lead",
	"version": "0.1.0",
	"description": "Create OceanCRM leads from WhatsApp Web.",
	"icons": {
		"16": "icons/icon-128.png",
		"48": "icons/icon-128.png",
		"128": "icons/icon-128.png"
	},
	"permissions": ["storage", "cookies"],
	"host_permissions": [
		"https://web.whatsapp.com/*",
		"https://crm.oceantechnolab.com/*"
	],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["https://web.whatsapp.com/*"],
			"js": ["content-legacy.js", "content.js"],
			"css": ["styles.css"],
			"run_at": "document_end"
		}
	],
	"action": {
		"default_title": "OceanCRM Lead",
		"default_icon": {
			"16": "icons/icon-128.png",
			"48": "icons/icon-128.png",
			"128": "icons/icon-128.png"
		}
	}
}
